pipeline{
    agent any 
    
    stages {
        
        stage('clone') {
            steps{
            git 'https://github.com/varunamaravati/demo1.git'
        }
        }
        stage('build') {
			steps {
				sh 'mvn -DskipTests clean install'
			}
		}
		stage('Test') {
			steps {
				sh 'mvn test'
			}
			post {
				always {
					junit '**/target/surefire-reports/*.xml'
					archiveArtifacts '**/target/*.jar'
					
				}
		
	    	}
		}
        stage('deploy') {
			steps {
			    sh 'cp target/*.jar /var/opt/tomcat/webapps'
			}
        }
    }
    
}


